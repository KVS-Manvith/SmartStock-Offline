{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build JavaFX App",
      "type": "shell",
      "command": "javac",
      "args": [
        "--module-path",
        "C:/javafx/lib",
        "--add-modules",
        "javafx.controls,javafx.fxml",
        "-cp",
        "lib/mysql-connector-j-9.6.0.jar",
        "-d",
        "out",
        "src/com/inventory/dao/*.java",
        "src/com/inventory/model/*.java",
        "src/com/inventory/service/*.java",
        "src/com/inventory/ui/*.java",
        "src/com/inventory/util/*.java"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$javac"
      ]
    },
    {
      "label": "Run JavaFX App",
      "type": "shell",
      "command": "java",
      "args": [
        "--module-path",
        "C:/javafx/lib",
        "--add-modules",
        "javafx.controls,javafx.fxml",
        "-cp",
        "out;lib/mysql-connector-j-9.6.0.jar",
        "com.inventory.ui.FXLoginApp"
      ],
      "dependsOn": "Build JavaFX App"
    }
  ]
}
